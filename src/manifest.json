{
   "manifest_version": 2,
   "name": "MessageLeaf Blocker",
   "version": "0.0.1",
   "permissions": [
      "webNavigation",
      "tabs"
   ],
   "background": {
      "scripts": [
         "js/background.js"
      ]
   },
   "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": [
         "js/jquery-1.9.1.min.js",
         "js/content_script.js"
      ]
   }],
   "browser_action": {
      "default_icon": "img/icon128.png",
      "default_title": "MessageLeaf Blocker"
   },
   "icons": {
      "128": "img/icon128.png",
      "48": "img/icon48.png"
   }
}
